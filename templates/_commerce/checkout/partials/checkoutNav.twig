{% set steps = [
  {
    title: 'E-mail address'|t,
    url: url('checkout')
  },
  {
    title: 'Personal details'|t,
    url: url('checkout/persoonlijke-gegevens')
  },
  {
    title: 'Payment'|t,
    url: url('checkout/betaling')
  }
] %}

<ul class="flex justify-between pb-20 border-b border-pink-500 mb-40">
  {% for item in steps %}
  <li class="w-1/3 md:w-fit mx-2">
    <a href="{{ item.url }}" class="">
      <div class="flex justify-center items-center mb-10 {{ step == loop.index ? 'text-pink-500' }}">
        <span class=" text-pink-500 absolute">{{loop.index}}</span>
      </div>
      {{ item.title}}
    </a>
  </li>
  {% endfor %}
</ul>
