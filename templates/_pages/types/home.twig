{# Layouts and macros #}
{% extends "_layout/site" %}

{% block content %}
    <div class="relative -top-110 left-0 h-fit">
        <img src="../assets/www/images/hero.jpg" alt="hero">
    </div>

    <section class="container">
        <article class="flex mb-100 items-center">
            <h2 class="w-5/12 text-50 font-serif uppercase">{{entry.titleOne|nl2br}}</h2>
            <div class="w-7/12 flex">
                <div class="w-400">
                    <img src="../assets/www/images/Mockup-3.jpg" alt="Mockup-1">
                </div>
                <div class="w-400">
                    <img class="w-400" src="../assets/www/images/Mockup-2.jpg" alt="Mockup-2">
                </div>
            </div>
        </article>

        <article class="flex mt-100 mb-200 items-center">
            <div class="w-6/12">
                <img class="relative -left-60" src="../assets/www/images/work.jpg" alt="hero">
            </div>
            <div class="w-4/12 mx-auto">
                <h2 class="text-50 font-serif uppercase">{{entry.titleTwo|nl2br}}</h2>
                <p class="w-3/4 py-20">{{entry.descriptionOne}}</p>
                {{ include ("_layout/partials/button", {button: entry.linkOne}) }}
            </div>
        </article>

        <article class="flex items-center">
            <div class="w-4/12 mx-auto">
                <h2 class="text-50 font-serif uppercase">{{entry.titleThree|nl2br}}</h2>
                <p class="w-3/4 py-20">{{entry.descriptionTwo|nl2br}}</p>
                {{ include ("_layout/partials/button", {button: entry.linkTwo}) }}
            </div>
            <div class="w-5/12 mx-auto">
                <img src="../assets/www/images/about.jpg" alt="hero">
            </div>
        </article>
    </section>

{% endblock %}
