{# Layouts and macros #}
{% extends "_layout/site" %}

{% if cart is not defined %}
    {% set cart = craft.commerce.carts.cart %}
{% endif %}

{% block content %}
    <div class="relative -top-[10.75rem] left-0">
    {% for image in entry.imageOne %}
        <img class="h-screen w-full object-cover relative top-0 left-0" src="{{image.url()}}" alt="hero">
    {% endfor %}
    </div>

    <section class="container">
        <article class="flex flex-col lg:flex-row mb-50 lg:mb-100 lg:items-center">
            <h2 class="w-12/12 lg:w-6/12 text-50 font-serif uppercase">{{entry.titleOne|nl2br}}</h2>
            <div class="w-12/12 lg:w-6/12 flex">
                <ul class="flex flex-wrap items-center">
                    {% for product in entry.featuredProducts.all()  %}
                        <li class="w-3/6" x-show="!filter || product.title.toLowerCase().includes(filter.toLowerCase())">
                            {% include '_commerce/shop/partials/thumbnail' %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </article>

        <article class="flex flex-col-reverse lg:flex-row my-0 lg:my-200 items-center">
            <div class="w-12/12 lg:w-6/12 my-50">
                {% for image in entry.imageTwo %}
                    <img src="{{image.url()}}" alt="hero">
                {% endfor %}
            </div>
            <div class="w-12/12 lg:w-4/12 mx-auto">
                <h2 class="text-50 font-serif uppercase">{{entry.titleTwo|nl2br}}</h2>
                <p class="w-3/4 py-20 text-9">{{entry.descriptionOne}}</p>
                {{ include ("_layout/partials/button", {button: entry.linkOne}) }}
            </div>
        </article>

        <article class="flex flex-col lg:flex-row my-0 lg:mb-200 items-center">
            <div class="w-12/12 lg:w-4/12 mx-auto">
                <h2 class="text-50 font-serif uppercase">{{entry.titleThree|nl2br}}</h2>
                <p class="w-3/4 py-20 text-9">{{entry.descriptionTwo|nl2br}}</p>
                {{ include ("_layout/partials/button", {button: entry.linkTwo}) }}
            </div>
            <div class="w-12/12 lg:w-5/12 mx-auto my-50">
                {% for image in entry.imageThree %}
                    <img src="{{image.url()}}" alt="hero">
                {% endfor %}            
            </div>
        </article>
    </section>

{% endblock %}
